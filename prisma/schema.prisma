generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Article {
  id            Int      @id @default(autoincrement())
  title         String
  description   String?
  content       String?
  featuredImage String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
